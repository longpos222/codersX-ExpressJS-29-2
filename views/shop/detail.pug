extends ../layouts/common

block content
  .content.m-3
    h1.text-center Books details
    form.m-3
      img(src=book.coverUrl, alt="book-cover", "width"=100, "height"=150)
    
    form.m-3(action="/books/"+book._id+"/detail/", method="post", enctype="multipart/form-data")
      .form-group
        label(for='book-cover') Upload your new cover:
        input#book-cover.form-control-file.mb-3(type='file', name="book-cover")
        .div
          h6.font-weight-bold Title: 
          p= book.title
          h6.font-weight-bold Description: 
          p= book.description
          label.font-weight-bold(for='title') New title:
          input#title.form-control(type="text", name="title" placeholder="input your new title ...")
      button.btn.btn-info Submit
    if errors
      each error in errors
        p.alert.alert-danger= error